<!-- app/views/words/index.html.erb -->

<h1><%= link_to '単語一覧', root_path %></h1>

<%= link_to '新規単語追加', new_word_path %>

<%= form_with(url: words_path, method: :get) do |form| %>
  <%= form.text_field :search %>
  <%= form.submit '検索' %>
<% end %>

<div class="word-list-container">
  <ul class="word-list">
    <% @words.each do |word| %>
      <li><%= link_to word.term, word %></li>
    <% end %>
  </ul>
</div>
